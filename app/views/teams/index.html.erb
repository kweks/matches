<h1>Listing teams</h1>

<table>
  <tr>
    <th>Home team</th>
    <th>Away team</th>
    <th>League</th>
    <th>Date</th>
    <th>Time</th>
    <th>Attended</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.home_team %></td>
    <td><%= team.away_team %></td>
    <td><%= team.league %></td>
    <td><%= team.date %></td>
    <td><%= team.time %></td>
    <td><%= team.attended %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

