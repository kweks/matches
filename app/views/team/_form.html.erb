<%= form_for @team, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :home_team, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :home_team, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :away_team, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :away_team, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :league, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :league, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_select :time, :class => 'time_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :attended, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :attended, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                team_path, :class => 'btn' %>
  </div>
<% end %>
